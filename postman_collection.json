{
	"info": {
		"name": "Cinema Booking System API",
		"description": "Complete API collection for Cinema Booking System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"John Doe\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/register",
							"host": ["{{base_url}}"],
							"path": ["api", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"john_doe\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/login",
							"host": ["{{base_url}}"],
							"path": ["api", "login"]
						}
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "logout"]
						}
					}
				}
			]
		},
		{
			"name": "Cinemas",
			"item": [
				{
					"name": "Get All Cinemas",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/cinemas?page=1&page_size=10",
							"host": ["{{base_url}}"],
							"path": ["api", "cinemas"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "page_size",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Cinema by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/cinemas/1",
							"host": ["{{base_url}}"],
							"path": ["api", "cinemas", "1"]
						}
					}
				},
				{
					"name": "Get Seat Availability",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/cinemas/1/seats?date=2026-01-20&time=19:00",
							"host": ["{{base_url}}"],
							"path": ["api", "cinemas", "1", "seats"],
							"query": [
								{
									"key": "date",
									"value": "2026-01-20"
								},
								{
									"key": "time",
									"value": "19:00"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Payment Methods",
			"item": [
				{
					"name": "Get All Payment Methods",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/payment-methods",
							"host": ["{{base_url}}"],
							"path": ["api", "payment-methods"]
						}
					}
				}
			]
		},
		{
			"name": "Bookings",
			"item": [
				{
					"name": "Create Booking",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cinema_id\": 1,\n  \"seat_id\": 5,\n  \"date\": \"2026-01-20\",\n  \"time\": \"19:00\",\n  \"payment_method\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/booking",
							"host": ["{{base_url}}"],
							"path": ["api", "booking"]
						}
					}
				},
				{
					"name": "Get User Bookings",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/bookings",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "bookings"]
						}
					}
				},
				{
					"name": "Process Payment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"booking_id\": 1,\n  \"payment_method\": 1,\n  \"payment_details\": {\n    \"card_number\": \"4111111111111111\",\n    \"card_holder\": \"John Doe\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/pay",
							"host": ["{{base_url}}"],
							"path": ["api", "pay"]
						}
					}
				}
			]
		}
	]
}
